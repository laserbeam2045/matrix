{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@types/*": [
        "src/@types/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "outDir": "dist"
  },
  "include": [
    "src/*.js",
    "src/*.ts",
    "src/api/*.js",
    "src/api/*.ts",
    "src/components/**/*.vue",
    "src/composables/**/*.js",
    "src/composables/**/*.ts",
    "src/pages/*.vue",
    "src/plugins/*.js",
    "src/plugins/*.ts",
    "src/store/*.js",
    "src/store/*.ts",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "src/utilities/*.js",
    "src/utilities/*.ts"
, ],
  "exclude": [
    "node_modules"
  ]
}
